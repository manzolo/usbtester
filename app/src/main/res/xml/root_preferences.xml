<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="App">

        <EditTextPreference
            app:dialogTitle="Select duration"
            app:key="seconds"
            app:summary="Set every seconds monitor device"
            app:title="Every seconds" />
        <EditTextPreference
            app:dialogTitle="Select device address"
            app:key="device"
            app:summary="Select device to watch"
            app:title="Device address" />

    </PreferenceCategory>

    <PreferenceCategory app:title="State">

        <SwitchPreferenceCompat
            app:defaultValue="true"
            app:key="enabled"
            app:summary="Click to switch on or off"
            app:title="Service enabled" />
        <SwitchPreferenceCompat
            app:defaultValue="false"
            app:key="debug"
            app:summary="Click to switch on or off"
            app:title="Debug" />

    </PreferenceCategory>

</PreferenceScreen>
